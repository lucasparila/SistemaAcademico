package br.ifsp.lucasparila;

public class Turma {
    private String codigo;
    private Professor professor;

    // Construtor
    public Turma(String codigo, Professor professor) {
        this.codigo = codigo;
        this.professor = professor;
    }

    // Getters e Setters
    public String getCodigo() {
        return codigo;
    }

    public void setCodigo(String codigo) {
        this.codigo = codigo;
    }

    public Professor getProfessor() {
        return professor;
    }

    public void setProfessor(Professor professor) {
        this.professor = professor;
    }

    // Método para visualizar informações da turma
    public void visualizarInformacoes() {
        System.out.println("Código da Turma: " + codigo);
        System.out.println("Professor Responsável: " + professor.getNome());
    }
}
